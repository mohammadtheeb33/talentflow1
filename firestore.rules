rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Job Profiles: Public Read Access for Career Pages
    match /jobProfiles/{jobId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow read: if true; // Allow public to view job posts
    }

    // CVs / Candidates
    match /cvs/{cvId} {
      // Allow public creation (for Application Form)
      allow create: if true;
      
      // Allow read/update/delete only by the job owner (recruiter)
      // Check both 'uid' (new standard) and 'userId' (legacy)
      allow read, update, delete: if isAuthenticated() && (
        resource.data.uid == request.auth.uid || 
        resource.data.userId == request.auth.uid
      );
    }

    match /events/{eventId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }

    match /integrations/outlook/users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /outlook_oauth_states/{stateId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /tickets/{ticketId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());

      match /messages/{messageId} {
        allow create: if isAuthenticated() && (get(/databases/$(database)/documents/tickets/$(ticketId)).data.userId == request.auth.uid || isAdmin());
        allow read: if isAuthenticated() && (get(/databases/$(database)/documents/tickets/$(ticketId)).data.userId == request.auth.uid || isAdmin());
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
