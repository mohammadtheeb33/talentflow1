rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for CVs
    // Path: cvs/{candidateId}/original/{filename}
    match /cvs/{candidateId}/original/{filename} {
      allow read, write: if isAuthenticated();
    }
    
    // Also allow 'candidates' path which was used by some API versions
    match /candidates/{candidateId}/{filename} {
      allow read, write: if isAuthenticated();
    }
    
    // Legacy or Unscoped paths (if needed)
    match /unscoped/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Companies paths (if needed)
    match /companies/{companyId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Resumes from Public Career Page
    match /resumes/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
